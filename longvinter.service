[Unit]
Description=Longvinter Server
Documentation=https://docs-server.longvinter.com

StartLimitIntervalSec=0
After=network.target
Wants=network.target

[Service]
Type=simple
User=steamcmd
Group=steamcmd
Nice=5

Restart=always
RestartSec=15

ProtectHome=false
ProtectSystem=full
PrivateDevices=true
NoNewPrivileges=true
PrivateTmp=true
InaccessibleDirectories=/root /sys /srv -/opt /media -/lost+found
ReadWriteDirectories=/home/steam/longvinter-linux-server
WorkingDirectory=/home/steam/longvinter-linux-server

KillSignal=SIGCONT
Sockets=longvinter.socket
#EnvironmentFile=-/home/steam/longvinter-linux-server/unit.conf
ExecStart=/bin/sh -c "exec /home/steam/longvinter-linux-server/LongvinterServer.sh </run/longvinter.control"

[Install]
WantedBy=multi-user.target
